{
  "scheme": "semantic",
  "username": "NTA-Bot",
  "email": "guy@nta-bot",
  "schemeDefinition": "major.minor[.build][->patch]",
  "versionFile": "./VERSION",
  "files": [
    {
      "path": // path to file containing version to be updated
      "line": // optional line number if needed
    }
  ],
  "rules": [
    {
      "trigger": "commit",
      "bump": "build"
    },
    {
      "trigger": "commit",
      "bump": "minor",
      "branch": "master",
      "reset": "build"
    },
    {
      "trigger": "commit",
      "bump": "major",
      "branch": "release",
      "reset": [
        "minor",
        "build"
      ]
    }
  ]
}
